<%# TODO: Redo layout for Bootstrap %>

<div class="container-fluid user-dashboard">

<h1><%= @user.name %>'s Dashboard</h1><br>

  <div class="row">
    <div class="col-md-6 col-sm-12">
      <h2>User Details</h2>
      <p>Email: <%= @user.email %></p>
      <p>Birth Date: <%= @user.birth_date.strftime("%B %d, %Y") %></p>
      <% if !@user.known_allergies.empty? %><p>Allergies: <%= @user.known_allergies %><% end %></p><br>

      <a class="btn" href="/users/dashboard-<%= @user.id %>/edit">Edit my user details</a><br><br>

      <h2>Current Medications</h2>

      <%= erb :'/application/current_medications' %>
    </div>

    <div class="col-md-6 col-sm-12">
      <h2>Create a New Medication</h2>

      <%= erb :'/application/new_medication_form' %>
    </div>
  </div>

</div>