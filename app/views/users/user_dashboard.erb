<div class="row">
  <% @title = "Rxeactions | User Dashboard" %>

  <div class="col-12">
    <h1 class="sub-headline"><%= @user.name %>'s Dashboard</h1>
  </div>

  <div class="col-md-6 col-sm-12">
    <h2>User Details</h2>
    <p>Email: <%= @user.email %></p>
    <p>Birth Date: <%= @user.birth_date.strftime("%B %d, %Y") %></p>
    <% if !@user.known_allergies.empty? %><p>Allergies: <%= @user.known_allergies %><% end %></p>

    <a class="btn" href="/users/dashboard-<%= @user.id %>/edit">Edit my user details</a>

    <h2>Current Medications</h2>

    <%= erb :'/application/current_medications' %>
  </div>

  <div class="col-md-6 col-sm-12">
    <h2>Create a New Medication</h2>

    <%= erb :'/application/new_medication_form' %>
  </div>
</div>