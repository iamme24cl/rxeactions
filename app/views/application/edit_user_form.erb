<form method="POST" action="/users/dashboard-<%= @user.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">

  <div class="form-row">
    <div class="form-group col-12">
      <p>Required fields are followed by <strong class="req">*</strong>.</p>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="name" class="col-2 col-form-label">Name: <strong class="req">*</strong></label>
    <div class="col-9">
      <input id="name" class="form-control" type="text" name="user[name]" value="<%= @user.name %>" required>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="email" class="col-2 col-form-label">Email: <strong class="req">*</strong></label>
    <div class="col-9">
      <input id="email" class="form-control" type="text" name="user[email]" value="<%= @user.email %>" required>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="bday" class="col-2 col-form-label">Birthday: <strong class="req">*</strong></label>
    <div class="col-9">
      <input id="bday" class="form-control" type="date" name="user[birth_date]" max="<%= (Time.now - 567993600).strftime("%Y-%m-%d") %>" aria-describedby="bdayHelp" value="<%= @user.birth_date %>" required>
      <small id="bdayHelp" class="form-text text-muted">Must be 18 years or older to create an account.</small>
    </div>
  </div>

  <div class="form-row justify-content-center">
    <div class="form-group col-11">
      <label for="allergies">Known Allergies: </span></label>
      <textarea id="allergies" class="form-control" name="user[known_allergies]" rows="5" placeholder="List your known allergies here, even if they're not medications."><%= @user.known_allergies %></textarea>
    </div>
  </div>

  <div class="form-group row align-items-end edit-user-form">
    <label for="pwd" class="col-auto col-form-label">Enter password to save edits: <strong class="req">*</strong></label>
    <div class="col-4 mr-auto">
      <input id="pwd" class="form-control" type="password" name="user[password]" value="<%= @user.password %>" required>
    </div>
    <div class="col-auto">
      <input class="btn edit-user-form" type="submit" value="Save Edits">
    </div>
  </div>

</form>

