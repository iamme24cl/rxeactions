<%# Displays a list of all of the current user's medications %>

<% @meds.each do |m| %>
  <p>Name: <a href="/medications/<%= m.slug %>"><%= m.name %></a></p>
  <p>Dosage Amount: <%= m.dosage_amount %></p>
  <p>Dosage Form: <%= m.dosage_form %></p>
  <p>Ailment Treated: <%= m.ailment_treated %></p><br>
<% end %>

<% if @meds.none? {|m| m.currently_taking == true} %>
  <p>You have not recorded any medications yet</p>
<% end %>