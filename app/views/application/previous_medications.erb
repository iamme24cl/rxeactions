<%# Displays a list of all of the current user's previous medications %>

<div class="row">
  <% @meds.each do |m| %>
    <% if !m.currently_taking %>
      <div class="col-12 iteration">
        <p><a href="/medications/<%= m.slug %>"><%= m.name %></a></p>
        <p>Dosage Amount: <%= m.dosage_amount %></p>
        <p>Dosage Form: <%= m.dosage_form %></p>
        <p>Ailment Treated: <%= m.ailment_treated %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="row">
  <% if @meds.none? {|m| m.currently_taking == false} %>
    <div class="col-12">
      <p>All of your medications are current</p>
    </div>
  <% end %>
</div>