<form method="POST" action="/login">
  
  <div class="form-row">
    <div class="form-group col-12">
      <p>Required fields are followed by <strong class="req">*</strong>.</p>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="email" class="col-3 col-form-label">Email: <strong class="req">*</strong></label>
    <div class="col-8">
      <input id="email" class="form-control" type="text" name="user[email]" required>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="pwd" class="col-3 col-form-label">Password: <strong class="req">*</strong></label>
    <div class="col-8">
      <input id="pwd" class="form-control" type="password" name="user[password]" aria-describedby="pwdHelp" required>
      <small id="pwdHelp" class="form-text text-muted">Must be between 6 and 20 characters long.</small>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-12">
      <input class="btn" type="submit" value="Log In">
    </div>
  </div>

</form>