<div class="login-error">
  <% @title = "Rxeactions | Log In Error" %>

  <h2>The following error may have kept you from logging in:</h2>
  <% if flash[:user_error] %> <p> <%= flash[:user_error] %><a href="/"> sign up for an account.</a> </p> <% end %>
  <% if flash[:pwd_error] %> <p> <%= flash[:pwd_error] %> </p> <% end %>

  <h1>Log In</h1>
  <form method="POST" action="/login">
    <p>Required fields are followed by <strong>*</strong>.</p>

    <label for="email">Email: <strong>*</strong></label>
    <input id="email" type="email" name="user[email]" <% if flash[:pwd_error] %> value="<%= @user.email %>" <% end %> required><br>

    <label for="pwd">Password: <strong>*</strong></label>
    <input id="pwd" type="password" name="user[password]" required><br>

    <input class="btn" type="submit" value="Log In"><br><br>

  </form>

</div>